<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BesinDegerleri">
    <ImageView
        android:id="@+id/besin_gorseli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp">


    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/besinIsim"
        android:layout_below="@id/besin_gorseli"
        android:text="Besin İsmi"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        >


    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/besinKalori"
        android:layout_below="@id/besinIsim"
        android:text="Besin Kalori"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        >


    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/besinKarbonhidrat"
        android:layout_below="@id/besinKalori"
        android:text="Besin Karbonhidrat"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        >


    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/besinProtein"
        android:layout_below="@id/besinKarbonhidrat"
        android:text="Besin Protein"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        >


    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/besinYag"
        android:layout_below="@id/besinProtein"
        android:text="Besin Yağ"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        >


    </TextView>




</RelativeLayout>
</layout>
